{% extends 'base.html.twig' %}

{% block title %}Справочник регионов {% endblock %}

{% block body %}
    <h1>Region index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Region</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for region in regions %}
            <tr>
                <td>{{ region.id }}</td>
                <td>{{ region.name }}</td>
                <td>
                    <a href="{{ path('region_show', {'id': region.id}) }}">show</a>
                    <a href="{{ path('region_edit', {'id': region.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('region_new') }}" class = "btn btn-primary">Create new</a>
{% endblock %}
