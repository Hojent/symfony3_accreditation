        <input type="submit" class="btn btn-primary btn-block" value="{{'forms.buttons.save'|trans }}" />
    </div>
    <div class="col-sm-6">
        <a class="btn btn-info" href="{{ path('banner_index') }}">{{'forms.buttons.cansel'|trans }}</a>
    </div>
    </div>
