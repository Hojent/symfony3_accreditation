{% extends 'base.html.twig' %}
{% block breadcrumbs %}
    {{ bread('Баннеры', path('banner_index')) }}
    {{ bread('Новый') }}
{%  endblock %}
{% block body %}
    <h1>Создать баннер</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
