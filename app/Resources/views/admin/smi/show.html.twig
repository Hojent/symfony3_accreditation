{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h1>{{ smi.title }}</h1>
    <div class="row">
        <div class="col-sm-4">
            <section class="panel">
                <div class="panel-body">
                    {{ 'tables.body'|trans }}:
                    <p>{{ smi.body }}</p>
                    <p>Адрес: {{ smi.address }}</p>
                    <p>Телефон: <a href="tel:{{ smi.tel  }}">{{ smi.tel }}</a></p>

                </div>
            </section>
        </div>
        <div class="col-sm-3">
            <section class="panel">
                <div class="panel-body">
                    <p>{{ 'tables.unp'|trans }}: {{ smi.unp }}</p>
                    <p>Руководитель:</p>
                    <p>{{ smi.head }}</p>
                </div>
            </section>
        </div>
        <div class="col-lg-4">
            <section class="panel">
                <header class="panel-heading">
                    {{ 'tables.owner'|trans }}
                </header>
                <div class="panel-body">
                    <p>{{ smi.owner }}</p>
                                   </div>
            </section>
        </div>
    </div>
    {% if is_granted ('ROLE_ADMIN') %}
        <div class="row">
            <ul class="list-inline">
                <li class="list-inline-item">
                    <a class="btn btn-primary" href="{{ path('admin_smi_edit', { 'id': smi.id }) }}">Редактировать</a>
                </li>
                <li class="list-inline-item">
                    {{ form_start(delete_form) }}
                    <input type="submit" class="btn btn-danger" value="{{'forms.buttons.remove'|trans }}">
                    <a class="btn btn-info" href="{{ path('admin_smi_index') }}">{{'forms.buttons.cansel'|trans }}</a>
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    {% endif %}
</div>
{% endblock %}
