{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{'headers.admin.smitip' |trans}}</h1>

    {{ form_start(form) }}
    <div class="row">
        <div class="col-sm-12">
            <p>{{ form_widget(form.name, {'attr': {'class': 'col-sm-12'}}) }}</p>
            {{ form_errors(form.name, {'attr': {'class': 'col-sm-12'}}) }}
        </div>
    </div>
    <input type="submit" class="btn btn-primary" value="{{'forms.buttons.create' |trans }}" />
    <a class="btn btn-info" href="{{ path('admin_smitip_index') }}">{{'forms.buttons.cansel'|trans }}</a>
    {{ form_end(form) }}

{% endblock %}