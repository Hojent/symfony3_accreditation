<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="{{ asset('assets/css/app.css') }}" rel="stylesheet">
    <title>{% block title %}Welcome!{% endblock %}</title>

    {% block stylesheets %}



    {% endblock %}

</head>
<body>
{% block head %} <h1>Mass-media Accreditation</h1> {% endblock %}
<div class="d-flex" id="wrapper">
    {% block sidebar %}
        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">
                {% if (app.user) %}
                    Hello, {{ app.user.username }} !
                {% endif %}
            </div>
            <div class="list-group list-group-flush">
                {% if is_granted ('ROLE_USER') or is_granted('ROLE_ADMIN') %}
                    <a class="nav-link" href="{{ path('logout') }}">Выйти из системы</a>
                {% else %}
                    <a href="{{ path('app_registration_new') }}" class="list-group-item list-group-item-action bg-light">Регистрация</a>
                {% endif %}
                <a href="#" class="list-group-item list-group-item-action bg-light">О проекте</a>
                {% if is_granted ('ROLE_USER') %}
                    <a href="{{ path('event_index') }}" class="list-group-item list-group-item-action bg-light">Events</a>
                    <a href="{{ path('fos_user_profile_show') }}" class="list-group-item list-group-item-action bg-light">Profile</a>
                    <a href="#" class="list-group-item list-group-item-action bg-light">Status</a>
                {% endif %}
            </div>
        </div>
    {%  endblock %}
    <!-- Page Content -->
    <div id="page-content-wrapper">
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            {% if (app.user) %}
                Ваш логин: {{ app.user.username }}. |  E-mail: {{ app.user.email }}
            {% endif %}
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('homepage') }}">Home</a>
                    </li>
                    {% if is_granted ('ROLE_USER') or is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('logout') }}">Выход</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('login') }}" >Вход </a>
                        </li>
                    {% endif %}

                    {% if is_granted ('ROLE_ADMIN') %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Справочники
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="{{ path('region_index') }}">Области</a>
                                <a class="dropdown-item" href="{{ path('city_index') }}">Города</a>
                                <a class="dropdown-item" href="{{ path('admin_smitip_index') }}">Типы СМИ</a>
                                <a class="dropdown-item" href="{{ path('admin_evtip_index') }}">Типы мероприятий</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">СМИ</a>
                                <div class="dropdown-divider"></div>
                                <div class="dropdown-item">
                                    <a class="dropdown-item" href="#">Создать</a>
                                </div>
                            </div>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </nav>
        <div class="container-fluid">
            <div class="wrapper">

            {% block body %}{% endblock %}

            </div>
        </div>

    </div>
    <!-- /#page-content-wrapper -->
</div>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
{% block javascripts %}
    <script src="{{ asset('assets/js/app.js') }}"></script>
{% endblock %}
</body>
</html>


